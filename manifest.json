{
    "api_version": "3",
    "name": "Firebook",
    "authors": "hedgieinsocks",
    "icon": "firefox",
    "triggers": {
        "regular": {
            "keyword": "f",
            "name": "Literal Search",
            "description": "Look for exact matches"
        },
        "fuzzy": {
            "keyword": "ff",
            "name": "Fuzzy Search",
            "description": "Look for fuzzy matches"
        }
    },
    "preferences": {
        "profile": {
            "type": "input",
            "name": "Profile Directory",
            "description": "Firefox profile path",
            "default_value": ""
        },
        "highlight": {
            "type": "checkbox",
            "name": "Highlight Matches",
            "description": "Draw attension to the matched strings",
            "default_value": false
        },
        "compact": {
            "type": "checkbox",
            "name": "Compact Mode",
            "description": "Enable condensed view",
            "default_value": false
        },
        "threshold": {
            "type": "number",
            "name": "Fuzzy Threshold",
            "description": "Discard the items below this score",
            "default_value": 40,
            "min": 0,
            "max": 99
        }
    }
}
