{
    "api_version": "3",
    "name": "Firebook",
    "authors": "hedgieinsocks",
    "icon": "firefox",
    "triggers": {
        "regular": {
            "keyword": "f",
            "name": "Firebook",
            "description": "Search and open Firefox bookmarks"
        }
    },
    "preferences": {
        "profile": {
            "type": "input",
            "name": "Profile Directory",
            "description": "Firefox profile path",
            "default_value": ""
        },
        "highlight": {
            "type": "checkbox",
            "name": "Highlight Matches",
            "description": "Draw attension to the matched strings",
            "default_value": false
        },
        "compact": {
            "type": "checkbox",
            "name": "Compact Mode",
            "description": "Enable condensed view",
            "default_value": false
        }
    }
}
